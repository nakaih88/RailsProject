<!DOCTYPE html>
<html>
  <head>
    <title>Anime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>
 
  <body>
   <div><%= render_nav_bar %></div>
    <%= yield %>
       <% if flash[:errors] %>
      <ul style="color: red;">
        <% flash[:errors].each do |error| %>
        <li><%= error %></li>
        <% end %>
      </ul>
      <img alt="Aqua" src="https://media1.tenor.com/images/7ef999b077acd6ebef92afc34690097e/tenor.gif?itemid=10893043"
         width=600" height="400">
    <% end %>
  </body>
</html>
